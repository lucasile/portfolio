import PreLoader from "../components/PreLoader.astro"
import Shell from "../components/Shell.astro"
import ProjectPage from "../components/ProjectPage.astro"
import "../styles/styles.css"
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />

    <link rel="apple-touch-icon" sizes="180x180" href="/portfolio/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/portfolio/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/portfolio/favicon-16x16.png">
    <link rel="manifest" href="/portfolio/site.webmanifest">

    <meta name="title" content="Lucas portfolio">
    <meta name="description" content="Portfolio for https://github.com/lucasile">
    <meta name="keywords" content="portfolio, developer, lucas, lucasile">
    <meta name="robots" content="index, follow">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="language" content="English">


		<title>Lucas</title>
	</head>

  <body>

    <div class="background-front front-page flex justify-center items-center fixed top-0 w-full h-full">
      
      <div id="squiggle" class="front-page hidden custom-shape-divider-top-1673926392">
