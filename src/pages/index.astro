        </svg>
      </div>

    </div>

  </body>

  <script>

    const background = document.querySelector(".background-front")!;
    const squiggles = document.querySelectorAll("#squiggle");
    const frontContent = document.querySelector("#front-content")!;
    const projectsContent = document.querySelector("#projects-content")!;
 
    setTimeout(() => {

      for (let i = 0; i < squiggles.length; i++) {
        squiggles[i].classList.remove("hidden");
      }

    }, 2200);

    const projectButton = document.getElementById("project-button");

    if (projectButton != null) {

      projectButton.addEventListener('click', () => {

        for (let i = 0; i < squiggles.length; i++) {
          squiggles[i].classList.add("projects-page");
        }      

        background.classList.add("background-projects");
        
        frontContent.classList.add("hide");

        if (frontContent.classList.contains("show"))
          frontContent.classList.remove("show");

        projectsContent.classList.add("show");

        if (projectsContent.classList.contains("hide"))
          projectsContent.classList.remove("hide");

      });

    }

    const backButton = document.getElementById("back-button");

    if (backButton != null) {

      backButton.addEventListener('click', () => {
  
        for (let i = 0; i < squiggles.length; i++) {
          squiggles[i].classList.remove("projects-page");
        }

        background.classList.remove("background-projects");
        
        frontContent.classList.remove("hide");
        frontContent.classList.add("show");

        projectsContent.classList.add("hide");
        projectsContent.classList.remove("show");


      });

    }

  </script>

</html>


