---
import ProjectCard from './ProjectCard.astro';
const projects = await Astro.glob('../projects/*.md')
---

<h1 class="text-2xl md:text-5xl text-white">My Projects</h1>
 
<ul>
  {projects.map(project => 
    <li>
      <ProjectCard frontmatter={project.frontmatter} Content={project.Content}/>
    </li>
  )}
</ul>

